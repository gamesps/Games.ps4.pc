    <script>
        // بيانات المستخدمين
        const users = JSON.parse(localStorage.getItem('gameUsers')) || [
            { username: 'admin', password: 'admin123' },
            { username: 'user', password: 'user123' }
        ];

        // العناصر الجديدة لنظام الدخول
        const loginSection = document.getElementById('login-section');
        const mainSystem = document.getElementById('main-system');
        const loginForm = document.getElementById('login-form');

        // نظام الدخول
        loginForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            const user = users.find(u => u.username === username && u.password === password);
            
            if (user) {
                // إخفاء شاشة الدخول وإظهار النظام الرئيسي
                loginSection.classList.add('hidden');
                mainSystem.classList.remove('hidden');
                
                // تهيئة النظام الرئيسي
                init();
            } else {
                alert('اسم المستخدم أو كلمة المرور غير صحيحة');
            }
        });

        // الكود الأصلي بالكامل - مع تعديلات نظام التحديثات
        let games = JSON.parse(localStorage.getItem('ps4Games')) || [];
        let updates = JSON.parse(localStorage.getItem('gameUpdates')) || [];
        let activationCodes = JSON.parse(localStorage.getItem('activationCodes')) || [];
        
        // العناصر الرئيسية
        const pages = document.querySelectorAll('.page');
        const navItems = document.querySelectorAll('.nav-item');
        const gamesGrid = document.getElementById('gamesGrid');
        const seriesGrid = document.getElementById('seriesGrid');
        const updatesGrid = document.getElementById('updatesGrid');
        const searchInput = document.getElementById('searchInput');
        
        // النوافذ المنبثقة
        const gameModal = document.getElementById('gameModal');
        const gameFormModal = document.getElementById('gameFormModal');
        const updateModal = document.getElementById('updateModal');
        const deleteModal = document.getElementById('deleteModal');
        const deleteUpdateModal = document.getElementById('deleteUpdateModal');
        const codeModal = document.getElementById('codeModal');
        
        // الأزرار
        const addGameBtn = document.getElementById('addGameBtn');
        const deleteGameBtn = document.getElementById('deleteGameBtn');
        const addUpdateBtn = document.getElementById('addUpdateBtn');
        const exportDataBtn = document.getElementById('exportDataBtn');
        const importDataBtn = document.getElementById('importDataBtn');
        const createCodeBtn = document.getElementById('createCodeBtn');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const closeFormModalBtn = document.getElementById('closeFormModalBtn');
        const closeUpdateModalBtn = document.getElementById('closeUpdateModalBtn');
        const closeDeleteModalBtn = document.getElementById('closeDeleteModalBtn');
        const closeDeleteUpdateModalBtn = document.getElementById('closeDeleteUpdateModalBtn');
        const closeCodeModalBtn = document.getElementById('closeCodeModalBtn');
        const closeCodeModalConfirmBtn = document.getElementById('closeCodeModalConfirmBtn');
        const cancelFormBtn = document.getElementById('cancelFormBtn');
        const cancelUpdateBtn = document.getElementById('cancelUpdateBtn');
        const cancelDeleteBtn = document.getElementById('cancelDeleteBtn');
        const confirmUpdateBtn = document.getElementById('confirmUpdateBtn');
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        const confirmDeleteUpdateBtn = document.getElementById('confirmDeleteUpdateBtn');
        const cancelDeleteUpdateBtn = document.getElementById('cancelDeleteUpdateBtn');
        const copyCodeBtn = document.getElementById('copyCodeBtn');
        const gameForm = document.getElementById('gameForm');
        const deleteGameSelect = document.getElementById('deleteGameSelect');
        const updateGameSelect = document.getElementById('updateGameSelect');
        const deleteUpdateSelect = document.getElementById('deleteUpdateSelect');
        
        // رفع الصور
        const gameImageUpload = document.getElementById('gameImageUpload');
        const imagePreview = document.getElementById('imagePreview');
        
        // التنقل بين الصفحات
        navItems.forEach(item => {
            item.addEventListener('click', () => {
                const pageId = item.getAttribute('data-page');
                
                // تحديث حالة التنشيط
                navItems.forEach(nav => nav.classList.remove('active'));
                item.classList.add('active');
                
                // إظهار الصفحة المطلوبة
                pages.forEach(page => page.classList.remove('active'));
                document.getElementById(pageId).classList.add('active');
                
                // تحديث المحتوى بناءً على الصفحة
                if (pageId === 'homePage') {
                    displayGames(games);
                } else if (pageId === 'seriesPage') {
                    displaySeries();
                } else if (pageId === 'updatesPage') {
                    displayUpdates();
                }
            });
        });
        
        // البحث عن الألعاب
        searchInput.addEventListener('input', () => {
            const searchTerm = searchInput.value.toLowerCase();
            const filteredGames = games.filter(game => 
                game.name.toLowerCase().includes(searchTerm) || 
                (game.categories && game.categories.some(cat => cat.toLowerCase().includes(searchTerm)))
            );
            displayGames(filteredGames);
        });
        
        // عرض الألعاب
        function displayGames(gamesToDisplay) {
            gamesGrid.innerHTML = '';
            
            if (gamesToDisplay.length === 0) {
                gamesGrid.innerHTML = '<p style="text-align: center; grid-column: 1/-1;">لا توجد ألعاب لعرضها</p>';
                return;
            }
            
            gamesToDisplay.forEach(game => {
                const gameCard = document.createElement('div');
                gameCard.className = 'game-card';
                
                let updateBadge = '';
                if (game.hasUpdate) {
                    updateBadge = '<div class="has-update-badge">!</div>';
                }
                
                gameCard.innerHTML = `
                    ${updateBadge}
                    <img src="${game.image}" alt="${game.name}" class="game-cover" onerror="this.src='https://via.placeholder.com/160x220/2d2d2d/ffffff?text=No+Image'">
                    <div class="game-title">${game.name}</div>
                `;
                
                gameCard.addEventListener('click', () => showGameDetails(game.id));
                gamesGrid.appendChild(gameCard);
            });
        }
        
        // عرض السلاسل
        function displaySeries() {
            seriesGrid.innerHTML = '';
            
            // استخراج السلاسل الفريدة
            const series = [...new Set(games.map(game => game.series).filter(Boolean))];
            
            if (series.length === 0) {
                seriesGrid.innerHTML = '<p style="text-align: center; grid-column: 1/-1;">لا توجد سلاسل لعرضها</p>';
                return;
            }
            
            series.forEach(seriesName => {
                const seriesCard = document.createElement('div');
                seriesCard.className = 'series-card';
                seriesCard.innerHTML = `
                    <div class="series-icon">🧩</div>
                    <h3>${seriesName}</h3>
                    <p>${games.filter(game => game.series === seriesName).length} لعبة</p>
                `;
                
                seriesCard.addEventListener('click', () => {
                    const seriesGames = games.filter(game => game.series === seriesName);
                    displayGames(seriesGames);
                    
                    // الانتقال إلى صفحة البيت
                    navItems.forEach(nav => nav.classList.remove('active'));
                    document.querySelector('.nav-item[data-page="homePage"]').classList.add('active');
                    
                    pages.forEach(page => page.classList.remove('active'));
                    document.getElementById('homePage').classList.add('active');
                });
                
                seriesGrid.appendChild(seriesCard);
            });
        }
        
        // عرض التحديثات
        function displayUpdates() {
            updatesGrid.innerHTML = '';
            
            if (updates.length === 0) {
                updatesGrid.innerHTML = '<p style="text-align: center; grid-column: 1/-1;">لا توجد تحديثات متاحة</p>';
                return;
            }
            
            updates.forEach(update => {
                const updateCard = document.createElement('div');
                updateCard.className = 'update-card';
                
                updateCard.innerHTML = `
                    <div class="update-version">${update.version}</div>
                    <img src="${update.gameImage}" alt="${update.gameName}" class="update-cover" onerror="this.src='https://via.placeholder.com/160x220/2d2d2d/ffffff?text=No+Image'">
                    <div class="update-title">${update.gameName}</div>
                `;
                
                updateCard.addEventListener('click', () => showUpdateDetails(update.id));
                updatesGrid.appendChild(updateCard);
            });
        }
        
        // عرض تفاصيل اللعبة
        function showGameDetails(gameId) {
            const game = games.find(g => g.id === gameId);
            if (!game) return;
            
            document.getElementById('modalGameTitle').textContent = game.name;
            
            // عرض التصنيفات
            let categoriesHtml = '';
            if (game.categories && game.categories.length > 0) {
                categoriesHtml = `<div class="categories-container">${game.categories.map(cat => `<span class="category-tag">${cat}</span>`).join('')}</div>`;
            }
            
            // عرض لغات الدبلجة
            let dubbingHtml = 'لا توجد';
            if (game.dubbing && game.dubbing.length > 0) {
                dubbingHtml = game.dubbing.join('، ');
            }
            
            // عرض لغات الترجمة
            let subtitlesHtml = 'لا توجد';
            if (game.subtitles && game.subtitles.length > 0) {
                subtitlesHtml = game.subtitles.join('، ');
            }
            
            const gameDetails = document.getElementById('gameDetails');
            gameDetails.innerHTML = `
                <div class="detail-row">
                    <span class="detail-label">الوصف:</span>
                    <span>${game.description || 'لا يوجد وصف'}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">التصنيفات:</span>
                    <span>${categoriesHtml || 'لا توجد'}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">المنصة:</span>
                    <span>${game.platform}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">منظور اللعبة:</span>
                    <span>${game.perspective || 'غير محدد'}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">أسلوب اللعب:</span>
                    <span>${game.playStyle || 'غير محدد'}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">السلسلة:</span>
                    <span>${game.series || 'لا توجد'}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">الدبلجة:</span>
                    <span>${dubbingHtml}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">الترجمة:</span>
                    <span>${subtitlesHtml}</span>
                </div>
                ${game.platform.includes('PS4') ? `
                <div class="download-section">
                    <h3>PS4</h3>
                    <div class="download-buttons">
                        ${game.psGameLinkEnabled && game.psGameLink ? `<a href="${game.psGameLink}" target="_blank" class="download-btn">تحميل اللعبة <span>${game.psSize}G</span></a>` : ''}
                        ${game.psUpdateLinkEnabled && game.psUpdateLink ? `<a href="${game.psUpdateLink}" target="_blank" class="download-btn">تحميل التحديث <span>${game.psUpdateSize || '??'}G</span></a>` : ''}
                        ${game.psDlcLinkEnabled && game.psDlcLink ? `<a href="${game.psDlcLink}" target="_blank" class="download-btn">تحميل الإضافات</a>` : ''}
                        ${game.psTranslationLinkEnabled && game.psTranslationLink ? `<a href="${game.psTranslationLink}" target="_blank" class="download-btn">تحميل الترجمة</a>` : ''}
                    </div>
                </div>
                ` : ''}
                ${game.platform.includes('PC') ? `
                <div class="download-section">
                    <h3>PC</h3>
                    <div class="download-buttons">
                        ${game.pcGameLinkEnabled && game.pcGameLink ? `<a href="${game.pcGameLink}" target="_blank" class="download-btn">تحميل اللعبة <span>${game.pcSize}G</span></a>` : ''}
                        ${game.pcUpdateLinkEnabled && game.pcUpdateLink ? `<a href="${game.pcUpdateLink}" target="_blank" class="download-btn">تحميل التحديث <span>${game.pcUpdateSize || '??'}G</span></a>` : ''}
                        ${game.pcDlcLinkEnabled && game.pcDlcLink ? `<a href="${game.pcDlcLink}" target="_blank" class="download-btn">تحميل الإضافات</a>` : ''}
                        ${game.pcTranslationLinkEnabled && game.pcTranslationLink ? `<a href="${game.pcTranslationLink}" target="_blank" class="download-btn">تحميل الترجمة</a>` : ''}
                    </div>
                </div>
                ` : ''}
                <div class="action-buttons">
                    <button class="action-btn edit-btn" onclick="editGame('${game.id}')">تعديل</button>
                    <button class="action-btn update-btn" onclick="openUpdateModal('${game.id}')">إضافة تحديث</button>
                    <button class="action-btn delete-btn" onclick="deleteGame('${game.id}')">حذف</button>
                </div>
            `;
            
            gameModal.classList.add('active');
        }
        
        // عرض تفاصيل التحديث
        function showUpdateDetails(updateId) {
            const update = updates.find(u => u.id === updateId);
            if (!update) return;
            
            const game = games.find(g => g.id === update.gameId);
            
            document.getElementById('modalGameTitle').textContent = `${update.gameName} - تحديث ${update.version}`;
            
            const gameDetails = document.getElementById('gameDetails');
            gameDetails.innerHTML = `
                <div class="detail-row">
                    <span class="detail-label">اللعبة الأصلية:</span>
                    <span>${update.gameName}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">رقم التحديث:</span>
                    <span>${update.version}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">حجم التحديث:</span>
                    <span>${update.size} جيجابايت</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">المنصة:</span>
                    <span>${update.platform}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">تاريخ الإضافة:</span>
                    <span>${new Date(update.dateAdded).toLocaleDateString('ar-EG')}</span>
                </div>
                
                <div class="download-section">
                    <h3>تحميل التحديث</h3>
                    <div class="download-buttons">
                        <a href="${update.link}" target="_blank" class="download-btn">تحميل التحديث <span>${update.size}G</span></a>
                    </div>
                </div>
                
                <div class="action-buttons">
                    <button class="action-btn delete-btn" onclick="deleteUpdate('${update.id}')">حذف التحديث</button>
                </div>
            `;
            
            gameModal.classList.add('active');
        }
        
        // إضافة لعبة جديدة
        addGameBtn.addEventListener('click', () => {
            document.getElementById('formModalTitle').textContent = 'إضافة لعبة جديدة';
            gameForm.reset();
            document.getElementById('gameId').value = '';
            imagePreview.style.display = 'none';
            gameFormModal.classList.add('active');
        });
        
        // تعديل لعبة
        function editGame(gameId) {
            const game = games.find(g => g.id === gameId);
            if (!game) return;
            
            document.getElementById('formModalTitle').textContent = 'تعديل اللعبة';
            document.getElementById('gameId').value = game.id;
            document.getElementById('gameName').value = game.name;
            document.getElementById('gameImage').value = game.image;
            document.getElementById('gameDescription').value = game.description || '';
            document.getElementById('gamePlatform').value = game.platform;
            document.getElementById('gamePerspective').value = game.perspective || '';
            document.getElementById('gamePlayStyle').value = game.playStyle || '';
            document.getElementById('gameSeries').value = game.series || '';
            document.getElementById('psSize').value = game.psSize || '';
            document.getElementById('pcSize').value = game.pcSize || '';
            
            // عرض الصورة إذا كانت موجودة
            if (game.image) {
                imagePreview.src = game.image;
                imagePreview.style.display = 'block';
            }
            
            // تحديد التصنيفات
            document.querySelectorAll('input[name="category"]').forEach(checkbox => {
                checkbox.checked = game.categories && game.categories.includes(checkbox.value);
            });
            
            // تحديد لغات الدبلجة
            document.querySelectorAll('input[name="dubbing"]').forEach(checkbox => {
                checkbox.checked = game.dubbing && game.dubbing.includes(checkbox.value);
            });
            
            // تحديد لغات الترجمة
            document.querySelectorAll('input[name="subtitles"]').forEach(checkbox => {
                checkbox.checked = game.subtitles && game.subtitles.includes(checkbox.value);
            });
            
            // روابط PS4
            document.getElementById('psGameLinkEnabled').checked = game.psGameLinkEnabled || false;
            document.getElementById('psGameLink').value = game.psGameLink || '';
            document.getElementById('psUpdateLinkEnabled').checked = game.psUpdateLinkEnabled || false;
            document.getElementById('psUpdateLink').value = game.psUpdateLink || '';
            document.getElementById('psDlcLinkEnabled').checked = game.psDlcLinkEnabled || false;
            document.getElementById('psDlcLink').value = game.psDlcLink || '';
            document.getElementById('psTranslationLinkEnabled').checked = game.psTranslationLinkEnabled || false;
            document.getElementById('psTranslationLink').value = game.psTranslationLink || '';
            
            // روابط PC
            document.getElementById('pcGameLinkEnabled').checked = game.pcGameLinkEnabled || false;
            document.getElementById('pcGameLink').value = game.pcGameLink || '';
            document.getElementById('pcUpdateLinkEnabled').checked = game.pcUpdateLinkEnabled || false;
            document.getElementById('pcUpdateLink').value = game.pcUpdateLink || '';
            document.getElementById('pcDlcLinkEnabled').checked = game.pcDlcLinkEnabled || false;
            document.getElementById('pcDlcLink').value = game.pcDlcLink || '';
            document.getElementById('pcTranslationLinkEnabled').checked = game.pcTranslationLinkEnabled || false;
            document.getElementById('pcTranslationLink').value = game.pcTranslationLink || '';
            
            gameModal.classList.remove('active');
            gameFormModal.classList.add('active');
        }
        
        // حفظ اللعبة (إضافة أو تعديل)
        gameForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const gameId = document.getElementById('gameId').value;
            
            // جمع التصنيفات المحددة
            const selectedCategories = [];
            document.querySelectorAll('input[name="category"]:checked').forEach(checkbox => {
                selectedCategories.push(checkbox.value);
            });
            
            // جمع لغات الدبلجة المحددة
            const selectedDubbing = [];
            document.querySelectorAll('input[name="dubbing"]:checked').forEach(checkbox => {
                selectedDubbing.push(checkbox.value);
            });
            
            // جمع لغات الترجمة المحددة
            const selectedSubtitles = [];
            document.querySelectorAll('input[name="subtitles"]:checked').forEach(checkbox => {
                selectedSubtitles.push(checkbox.value);
            });
            
            const gameData = {
                id: gameId || generateId(),
                name: document.getElementById('gameName').value,
                image: document.getElementById('gameImage').value,
                description: document.getElementById('gameDescription').value,
                categories: selectedCategories,
                platform: document.getElementById('gamePlatform').value,
                perspective: document.getElementById('gamePerspective').value,
                playStyle: document.getElementById('gamePlayStyle').value,
                series: document.getElementById('gameSeries').value,
                psSize: document.getElementById('psSize').value,
                pcSize: document.getElementById('pcSize').value,
                dubbing: selectedDubbing,
                subtitles: selectedSubtitles,
                
                // روابط PS4
                psGameLinkEnabled: document.getElementById('psGameLinkEnabled').checked,
                psGameLink: document.getElementById('psGameLink').value,
                psUpdateLinkEnabled: document.getElementById('psUpdateLinkEnabled').checked,
                psUpdateLink: document.getElementById('psUpdateLink').value,
                psDlcLinkEnabled: document.getElementById('psDlcLinkEnabled').checked,
                psDlcLink: document.getElementById('psDlcLink').value,
                psTranslationLinkEnabled: document.getElementById('psTranslationLinkEnabled').checked,
                psTranslationLink: document.getElementById('psTranslationLink').value,
                
                // روابط PC
                pcGameLinkEnabled: document.getElementById('pcGameLinkEnabled').checked,
                pcGameLink: document.getElementById('pcGameLink').value,
                pcUpdateLinkEnabled: document.getElementById('pcUpdateLinkEnabled').checked,
                pcUpdateLink: document.getElementById('pcUpdateLink').value,
                pcDlcLinkEnabled: document.getElementById('pcDlcLinkEnabled').checked,
                pcDlcLink: document.getElementById('pcDlcLink').value,
                pcTranslationLinkEnabled: document.getElementById('pcTranslationLinkEnabled').checked,
                pcTranslationLink: document.getElementById('pcTranslationLink').value
            };
            
            if (gameId) {
                // تعديل لعبة موجودة
                const index = games.findIndex(g => g.id === gameId);
                if (index !== -1) {
                    games[index] = gameData;
                }
            } else {
                // إضافة لعبة جديدة
                games.push(gameData);
            }
            
            saveGames();
            displayGames(games);
            gameFormModal.classList.remove('active');
        });
        
        // فتح نافذة إضافة تحديث
        function openUpdateModal(gameId = null) {
            updateGameSelect.innerHTML = '';
            games.forEach(game => {
                const option = document.createElement('option');
                option.value = game.id;
                option.textContent = game.name;
                if (gameId && game.id === gameId) {
                    option.selected = true;
                }
                updateGameSelect.appendChild(option);
            });
            
            updateModal.classList.add('active');
            if (gameModal.classList.contains('active')) {
                gameModal.classList.remove('active');
            }
        }
        
        addUpdateBtn.addEventListener('click', () => {
            openUpdateModal();
        });
        
        // إضافة تحديث للعبة
        confirmUpdateBtn.addEventListener('click', () => {
            const gameId = updateGameSelect.value;
            const updateVersion = document.getElementById('updateVersion').value;
            const updateSize = document.getElementById('updateSize').value;
            const updateLink = document.getElementById('updateLink').value;
            const updatePlatform = document.getElementById('updatePlatform').value;
            
            if (!gameId || !updateVersion || !updateSize || !updateLink) {
                alert('يرجى ملء جميع الحقول المطلوبة');
                return;
            }
            
            const game = games.find(g => g.id === gameId);
            if (game) {
                // إنشاء كائن تحديث جديد
                const update = {
                    id: generateId(),
                    gameId: gameId,
                    gameName: game.name,
                    gameImage: game.image,
                    version: updateVersion,
                    size: updateSize,
                    link: updateLink,
                    platform: updatePlatform,
                    dateAdded: new Date().toISOString()
                };
                
                // إضافة التحديث إلى مصفوفة التحديثات
                updates.push(update);
                localStorage.setItem('gameUpdates', JSON.stringify(updates));
                
                updateModal.classList.remove('active');
                alert('تم إضافة التحديث بنجاح!');
                
                // إذا كانت صفحة التحديثات نشطة، قم بتحديث العرض
                if (document.getElementById('updatesPage').classList.contains('active')) {
                    displayUpdates();
                }
            }
        });
        
        // حذف لعبة
        deleteGameBtn.addEventListener('click', () => {
            deleteGameSelect.innerHTML = '';
            games.forEach(game => {
                const option = document.createElement('option');
                option.value = game.id;
                option.textContent = game.name;
                deleteGameSelect.appendChild(option);
            });
            
            deleteModal.classList.add('active');
        });
        
        function deleteGame(gameId) {
            games = games.filter(game => game.id !== gameId);
            saveGames();
            displayGames(games);
            if (gameModal.classList.contains('active')) {
                gameModal.classList.remove('active');
            }
        }
        
        confirmDeleteBtn.addEventListener('click', () => {
            const gameId = deleteGameSelect.value;
            if (gameId) {
                deleteGame(gameId);
                deleteModal.classList.remove('active');
            }
        });
        
        // حذف تحديث
        function deleteUpdate(updateId) {
            updates = updates.filter(update => update.id !== updateId);
            localStorage.setItem('gameUpdates', JSON.stringify(updates));
            displayUpdates();
            gameModal.classList.remove('active');
        }
        
        // تصدير البيانات
        exportDataBtn.addEventListener('click', () => {
            const data = {
                games: games,
                updates: updates,
                activationCodes: activationCodes
            };
            const dataStr = JSON.stringify(data, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'ps4_games_backup.json';
            link.click();
            
            URL.revokeObjectURL(url);
        });
        
        // استيراد البيانات
        importDataBtn.addEventListener('click', () => {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            
            input.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (!file) return;
                
                const reader = new FileReader();
                reader.onload = (event) => {
                    try {
                        const importedData = JSON.parse(event.target.result);
                        if (Array.isArray(importedData)) {
                            // دعم الملفات القديمة
                            games = importedData;
                        } else if (importedData.games && importedData.updates) {
                            // دعم الملفات الجديدة
                            games = importedData.games;
                            updates = importedData.updates;
                            activationCodes = importedData.activationCodes || [];
                        } else {
                            alert('ملف غير صالح. يرجى اختيار ملف JSON صحيح.');
                            return;
                        }
                        
                        saveGames();
                        localStorage.setItem('gameUpdates', JSON.stringify(updates));
                        localStorage.setItem('activationCodes', JSON.stringify(activationCodes));
                        displayGames(games);
                        alert('تم استيراد البيانات بنجاح!');
                    } catch (error) {
                        alert('خطأ في قراءة الملف. يرجى التأكد من صحة الملف.');
                    }
                };
                reader.readAsText(file);
            });
            
            input.click();
        });
        
        // إنشاء رمز التنشيط
        createCodeBtn.addEventListener('click', () => {
            // إنشاء رمز عشوائي مكون من 16 حرفًا
            const code = generateActivationCode();
            const creationDate = new Date();
            const expiryDate = new Date();
            expiryDate.setMonth(expiryDate.getMonth() + 1); // إضافة شهر واحد
            
            // حفظ الرمز في قاعدة البيانات
            const activationCode = {
                id: generateId(),
                code: code,
                creationDate: creationDate.toISOString(),
                expiryDate: expiryDate.toISOString(),
                isActive: true
            };
            
            activationCodes.push(activationCode);
            localStorage.setItem('activationCodes', JSON.stringify(activationCodes));
            
            // عرض الرمز في النافذة المنبثقة
            document.getElementById('generatedCode').textContent = code;
            document.getElementById('codeCreationDate').textContent = creationDate.toLocaleDateString('ar-EG');
            document.getElementById('codeExpiryDate').textContent = expiryDate.toLocaleDateString('ar-EG');
            
            codeModal.classList.add('active');
        });
        
        // نسخ الرمز إلى الحافظة
        copyCodeBtn.addEventListener('click', () => {
            const code = document.getElementById('generatedCode').textContent;
            navigator.clipboard.writeText(code).then(() => {
                alert('تم نسخ الرمز إلى الحافظة!');
            }).catch(err => {
                console.error('فشل في نسخ الرمز: ', err);
            });
        });
        
        // وظيفة لإنشاء رمز تنشيط عشوائي
        function generateActivationCode() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let result = '';
            for (let i = 0; i < 16; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
                if ((i + 1) % 4 === 0 && i !== 15) {
                    result += '-';
                }
            }
            return result;
        }
        
        // وظيفة للتحقق من صلاحية الرموز
        function checkActivationCodes() {
            const now = new Date();
            activationCodes.forEach(code => {
                if (new Date(code.expiryDate) < now) {
                    code.isActive = false;
                }
            });
            localStorage.setItem('activationCodes', JSON.stringify(activationCodes));
        }
        
        // رفع الصور ومعاينتها
        gameImageUpload.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (event) => {
                    imagePreview.src = event.target.result;
                    imagePreview.style.display = 'block';
                    document.getElementById('gameImage').value = event.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
        
        // إغلاق النوافذ
        closeModalBtn.addEventListener('click', () => gameModal.classList.remove('active'));
        closeFormModalBtn.addEventListener('click', () => gameFormModal.classList.remove('active'));
        closeUpdateModalBtn.addEventListener('click', () => updateModal.classList.remove('active'));
        closeDeleteModalBtn.addEventListener('click', () => deleteModal.classList.remove('active'));
        closeDeleteUpdateModalBtn.addEventListener('click', () => deleteUpdateModal.classList.remove('active'));
        closeCodeModalBtn.addEventListener('click', () => codeModal.classList.remove('active'));
        closeCodeModalConfirmBtn.addEventListener('click', () => codeModal.classList.remove('active'));
        cancelFormBtn.addEventListener('click', () => gameFormModal.classList.remove('active'));
        cancelUpdateBtn.addEventListener('click', () => updateModal.classList.remove('active'));
        cancelDeleteBtn.addEventListener('click', () => deleteModal.classList.remove('active'));
        cancelDeleteUpdateBtn.addEventListener('click', () => deleteUpdateModal.classList.remove('active'));
        
        // النقر خارج النافذة لإغلاقها
        window.addEventListener('click', (e) => {
            if (e.target === gameModal) gameModal.classList.remove('active');
            if (e.target === gameFormModal) gameFormModal.classList.remove('active');
            if (e.target === updateModal) updateModal.classList.remove('active');
            if (e.target === deleteModal) deleteModal.classList.remove('active');
            if (e.target === deleteUpdateModal) deleteUpdateModal.classList.remove('active');
            if (e.target === codeModal) codeModal.classList.remove('active');
        });
        
        // وظائف مساعدة
        function generateId() {
            return Date.now().toString(36) + Math.random().toString(36).substr(2);
        }
        
        function saveGames() {
            localStorage.setItem('ps4Games', JSON.stringify(games));
        }
        
        // تهيئة التطبيق
        function init() {
            displayGames(games);
            displayUpdates();
            checkActivationCodes(); // التحقق من صلاحية الرموز عند بدء التشغيل
            
            // إضافة بعض الألعاب الافتراضية إذا لم تكن هناك ألعاب
            if (games.length === 0) {
                const defaultGames = [
                    {
                        id: generateId(),
                        name: 'God of War',
                        image: 'https://image.api.playstation.com/vulcan/img/rnd/202010/2217/LsaRVLF2IU2L1FNtyJdM4qgP.png',
                        description: 'انضم إلى كريتوس وأتروس في رحلة ملحمية عبر الممالك الأسطورية للآلهة الإسكندنافية.',
                        categories: ['اكشن', 'مغامرات'],
                        platform: 'PS4',
                        perspective: 'ثالث شخص',
                        playStyle: 'مغامرة قصصية',
                        series: 'God of War',
                        psSize: 45,
                        dubbing: ['انجليزي'],
                        subtitles: ['عربي', 'انجليزي'],
                        psGameLinkEnabled: true,
                        psGameLink: '#',
                        psUpdateLinkEnabled: false,
                        psDlcLinkEnabled: false,
                        psTranslationLinkEnabled: false,
                        hasUpdate: false
                    },
                    {
                        id: generateId(),
                        name: 'The Last of Us Part II',
                        image: 'https://image.api.playstation.com/vulcan/ap/rnd/202010/0222/A0dD9msotpY2bShSLXRFM4w7.png',
                        description: 'تابع رحلة إيلي في عالم ما بعد الوباء بحثًا عن الانتقام.',
                        categories: ['اكشن', 'مغامرات', 'رعب'],
                        platform: 'PS4',
                        perspective: 'ثالث شخص',
                        playStyle: 'مغامرة قصصية',
                        series: 'The Last of Us',
                        psSize: 78,
                        dubbing: ['انجليزي'],
                        subtitles: ['عربي', 'انجليزي'],
                        psGameLinkEnabled: true,
                        psGameLink: '#',
                        psUpdateLinkEnabled: false,
                        psDlcLinkEnabled: false,
                        psTranslationLinkEnabled: false,
                        hasUpdate: false
                    }
                ];
                
                games = defaultGames;
                saveGames();
                displayGames(games);
            }
        }
    </script>
</body>
</html>
